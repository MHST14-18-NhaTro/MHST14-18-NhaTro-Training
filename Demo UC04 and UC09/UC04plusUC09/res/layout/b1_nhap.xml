<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/b1"
        android:textColorHighlight="@color/green"
        android:textSize="23sp" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txt"
        android:text="@string/next"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_thongtin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_next"
        android:layout_marginTop="10dp"
        android:text="@string/dangtt"
        android:textColorHighlight="@color/green"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/txt_nhaptt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_thongtin"
        android:text="@string/nhaptt" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_nhaptt"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/btn_star"
        android:ems="10"
        android:hint="@string/nhapdc" >
    </EditText>

    <Button
        android:id="@+id/btn_star"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/editText1"
        android:text="@string/star" />

</RelativeLayout>